{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd personal-website-express && npm install && npx webpack --mode production"
  },
  "deploy": {
    "startCommand": "node personal-website-express/server/simple-server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
