{
  "version": 2,
  "builds": [
    {
      "src": "server/simple-server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/simple-server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/$1"
    }
  ]
} 